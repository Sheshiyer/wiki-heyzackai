{%- comment -%}
Section: Product — Technical Specifications
Purpose: Modular, responsive specs grid with editable groups
{%- endcomment -%}

{{ 'zack-modules.css' | asset_url | stylesheet_tag }}

<section id="z-tech-specs" class="z-section" data-section-id="{{ section.id }}">
  <div class="z-container">
    <h2>{{ section.settings.title | default: 'Technical Specifications' }}</h2>
    <div class="z-grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'spec_group' -%}
          <article class="z-card" {{ block.shopify_attributes }}>
            <h3>{{ block.settings.heading }}</h3>
            <ul class="z-list">
              {%- assign lines = block.settings.items | newline_to_br | split: '<br />' -%}
              {%- for line in lines -%}
                {%- if line != '' -%}
                  <li>{{ line }}</li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          </article>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product — Technical Specifications",
  "tag": "section",
  "class": "section",
  "settings": [
    {"type":"text","id":"title","label":"Section title","default":"Technical Specifications"}
  ],
  "blocks": [
    {
      "type":"spec_group",
      "name":"Spec group",
      "limit": 12,
      "settings": [
        {"type":"text","id":"heading","label":"Heading"},
        {"type":"textarea","id":"items","label":"Items (one per line)"}
      ]
    }
  ],
  "presets": [
