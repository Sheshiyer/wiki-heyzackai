{%- comment -%}
Section: Product — Software Integration & Compatibility
Purpose: Present software features and compatibility notes without over-claiming
{%- endcomment -%}

{{ 'zack-modules.css' | asset_url | stylesheet_tag }}

<section id="z-software" class="z-section" data-section-id="{{ section.id }}">
  <div class="z-container">
    <h2>{{ section.settings.title | default: 'Software Features & Compatibility' }}</h2>
    <div class="z-grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'feature' -%}
            <article class="z-card" {{ block.shopify_attributes }}>
              <h3>{{ block.settings.heading }}</h3>
              <ul class="z-list">
                {%- assign lines = block.settings.items | newline_to_br | split: '<br />' -%}
                {%- for line in lines -%}
                  {%- if line != '' -%}<li>{{ line }}</li>{%- endif -%}
                {%- endfor -%}
              </ul>
            </article>
          {%- when 'compatibility' -%}
            <article class="z-card" {{ block.shopify_attributes }}>
              <h3>{{ block.settings.heading }}</h3>
              <ul class="z-list">
                {%- assign lines = block.settings.items | newline_to_br | split: '<br />' -%}
                {%- for line in lines -%}
                  {%- if line != '' -%}<li>{{ line }}</li>{%- endif -%}
                {%- endfor -%}
              </ul>
            </article>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product — Software Integration & Compatibility",
  "tag": "section",
  "class": "section",
  "settings": [
    {"type":"text","id":"title","label":"Section title","default":"Software Features & Compatibility"}
  ],
  "blocks": [
    {
      "type":"feature",
      "name":"Feature list",
      "limit": 8,
      "settings": [
        {"type":"text","id":"heading","label":"Heading","default":"Core Software Features"},
        {"type":"textarea","id":"items","label":"Items (one per line)"}
      ]
    },
    {
      "type":"compatibility",
      "name":"Compatibility notes",
      "limit": 8,
      "settings": [
        {"type":"text","id":"heading","label":"Heading","default":"Compatibility & Modes"},
        {"type":"textarea","id":"items","label":"Items (one per line)"}
      ]
    }
  ],
  "presets": [
    {
      "name": "Product — Software Integration & Compatibility",
      "category": "Product",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "heading": "Core Software Features",
            "items": "Multilingual conversation and stories\nInteracts with educational and play‑based games\nAdaptive long‑term memory for learning progress\nMultiple roles: teacher, storyteller, friend, helper\nVoice cloning (parental consent required)\nLearning Guide for structured development\nEmotion‑aware friendship and supportive companionship\nChild‑safe curated news briefs\nParent mood summaries from chats (opt‑in)\nParental controls and monitoring"
          }
        },
        {
          "type": "compatibility",
          "settings": {
            "heading": "Compatibility & Modes",
            "items": "Privacy‑first: local processing by default\nOffline mode available for privacy\nOTA firmware upgrades supported\nConnectivity: Wi‑Fi 2.4G (2.4–2.485 GHz), Bluetooth 5.0\nSupported languages: Core + 40+ extended (see Technical Specifications)\nData protections aligned with GDPR, COPPA, CCPA"
          }
        }
      ]
    }
  ]
}
{% endschema %}
