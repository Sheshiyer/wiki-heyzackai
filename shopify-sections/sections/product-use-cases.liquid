Purpose: Show practical applications with card-based visual hierarchy
{%- endcomment -%}

{{ 'zack-modules.css' | asset_url | stylesheet_tag }}

<section id="z-use-cases" class="z-section" data-section-id="{{ section.id }}">
  <div class="z-container">
    <h2>{{ section.settings.title | default: 'How Families Use Zack AI' }}</h2>
    <div class="z-grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'use_case' -%}
          <article class="z-card" {{ block.shopify_attributes }}>
            <h3>{% if block.settings.icon != blank %}<span aria-hidden="true">{{ block.settings.icon }}</span> {% endif %}{{ block.settings.heading }}</h3>
            <p>{{ block.settings.text }}</p>
          </article>
        {%- endif -%}
      {%- endfor -%}
    </div>
    {%- if section.settings.cta_text != blank and section.settings.cta_link != blank -%}
      <div style="margin-top:16px">
        <a href="{{ section.settings.cta_link }}" class="z-btn z-btn--ghost">{{ section.settings.cta_text }}</a>
      </div>
    {%- endif -%}
  </div>
</section>

